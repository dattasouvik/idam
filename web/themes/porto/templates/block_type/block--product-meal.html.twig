{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  <section class="p-xlg">
    <div class="container">
      <div class="row">
        <div class="col-md-12 center">
          {{content.body}}
        </div>
      </div>
      <div class="row mt-lg">
        {{content.field_product_meal}}
      </div>
    </div>
  </section>
  {{ title_suffix }}
</div>
