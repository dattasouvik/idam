{% for key, item in items %}
  {% set img = file_url(item.content['#field_collection_item'].field_pm_image.entity.fileuri) %}
  {% set img_icon = file_url(item.content['#field_collection_item'].field_pm_icon_image.entity.fileuri ) %} 
  <div class="col-sm-4 pb-xlg">
    <div class="appear-animation" data-appear-animation="fadeInUp" data-appear-animation-delay="{{ item.content['#field_collection_item'].field_time_out.value }}">
      <span class="thumb-info thumb-info-no-zoom thumb-info-custom mb-xl center">
        <span class="thumb-info-side-image-wrapper p-none">
          <img src="{{ item.content['#field_collection_item'].field_pm_image.entity.fileuri | image_style('custom_style')}}" class="img-responsive" alt="">
          <img class="thumb-info-custom-icon" src="{{ img_icon }}" alt="" />
        </span>
        <span class="thumb-info-caption">
          <span class="thumb-info-caption-text">
            <h2 class="mb-md mt-xs">{{ item.content['#field_collection_item'].field_pm_title.value }}</h2>
            <p class="font-size-md">{{ item.content['#field_collection_item'].field_pm_content.value }}</p>
            <a class="btn btn-primary mt-md" href="{{ item.content['#field_collection_item'].field_pm_button.0.url }}">View More <i class="fa fa-long-arrow-right"></i></a>
          </span>
        </span>
      </span>
    </div>
  </div>
{% endfor %}

