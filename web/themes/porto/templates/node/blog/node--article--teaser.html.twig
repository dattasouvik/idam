<span class="thumb-info thumb-info-side-image thumb-info-no-zoom thumb-info-no-borders thumb-info-blog-custom mb-xl">
  <span class="thumb-info-side-image-wrapper p-none">
    <img src="{{ file_url(node.field_image.entity.fileuri) }}" class="img-responsive" alt="" style="width: 165px;">
  </span>
  <span class="thumb-info-caption">
    <span class="thumb-info-caption-text">
      <h4 class="mb-none mt-xs heading-dark">{{ label }}</h4>
      <p class="font-size-md"> 
          {% set conBody %}
              {{ content.body['#object'].body.summary }}
            {% endset %}  
          {{ conBody|striptags }}
      </p>
      <a class="mt-md" href="{{ url }}">Read More <i class="fa fa-long-arrow-right"></i></a>
    </span>
  </span>
</span>