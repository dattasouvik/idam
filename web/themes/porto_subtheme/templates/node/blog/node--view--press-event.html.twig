{% set createdDate = node.getCreatedTime|date('F d, Y') %}
<div class="row">
  <div class="col-md-12">
    <span class="thumb-info thumb-info-side-image thumb-info-no-zoom thumb-info-no-borders thumb-info-blog-custom mt-xl">
      <span class="thumb-info-side-image-wrapper p-none hidden-xs">
        <a title="" href="{{ url }}">
          <img src="{{ file_url(node.field_image.entity.fileuri) }}" class="img-responsive mr-md" alt="" style="width: 235px;">
        </a>
      </span>
      <span class="thumb-info-caption">
        <span class="thumb-info-caption-text">
          <h2 class="mb-md mt-xs"><a title="" class="text-dark" href="{{ url }}">{{ label }}</a></h2>
          <span class="post-meta">
            <span>{{ createdDate }} | <a href="#">{{ author_name }}</a></span>
          </span>
          <p class="font-size-md"> 
            {% set conBody %}
              {{ content.body }}
            {% endset %}  
            {{ conBody|striptags|slice(1, 298)}}...</p>
          <a class="mt-md" href="{{ url }}">Read More <i class="fa fa-long-arrow-right"></i></a>
        </span>
      </span>
    </span>
  </div>
</div>